<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/matchTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/teamName1"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/teamName1"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="20dip"
        android:layout_toLeftOf="@+id/teamName1"
        android:text="@string/matchTime"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/teamName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="80dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="15dip"
        android:maxLines="2"
        android:text="@string/teamName"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/teamIcon1"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_alignBottom="@+id/teamName1"
        android:layout_alignTop="@+id/teamName1"
        android:layout_toRightOf="@+id/teamName1"
        android:contentDescription="@string/iconDesc"
        android:scaleType="centerCrop"
        android:src="@drawable/loading" />

    <TextView
        android:id="@+id/versus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/teamName1"
        android:layout_alignTop="@+id/teamName1"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_toRightOf="@+id/teamIcon1"
        android:text="@string/versus"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/teamIcon2"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_alignBottom="@+id/teamName1"
        android:layout_alignTop="@+id/teamName1"
        android:layout_toRightOf="@+id/versus"
        android:contentDescription="@string/iconDesc"
        android:scaleType="centerCrop"
        android:src="@drawable/loading" />

    <TextView
        android:id="@+id/teamName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/teamName1"
        android:layout_alignTop="@+id/teamName1"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_toRightOf="@+id/teamIcon2"
        android:maxLines="2"
        android:text="@string/teamName"
        android:textSize="16sp" />

</RelativeLayout>