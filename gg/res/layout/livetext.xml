<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    

        <TextView
            android:id="@+id/livetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today&apos;s matches "
            android:layout_marginTop="10dip"
            android:layout_marginLeft="20dip" 
            android:textColor="@android:color/white"
            android:textSize="24sp" />

		<LinearLayout 
	    	android:id="@+id/liveview1"
	        android:orientation="horizontal"  
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"  
			android:layout_below="@id/livetitle"
			android:layout_alignLeft="@id/livetitle"
			android:layout_marginTop="15dip"
			
			>  
			<TextView 
				android:id="@+id/lineup1"
		        android:layout_width="wrap_content"  
		        android:layout_height="fill_parent"  
		        android:text="AAA vs BBB "  
				android:textColor="@android:color/white"
				android:textSize="18sp"
	        />

			<TextView 
			    android:id="@+id/live1"
		        android:layout_width="wrap_content"  
		        android:layout_height="fill_parent"  
		        android:text="Live!"  
				android:textStyle="bold|italic"  
				android:textColor="@color/red"
				android:textSize="18sp"
			
	        />
		</LinearLayout>
		
			<LinearLayout 
	    	android:id="@+id/liveview2"
	        android:orientation="horizontal"  
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"  
			android:layout_below="@id/liveview1"
			android:layout_alignLeft="@id/liveview1"
			android:layout_marginTop="5dip"
			
			>  
			<TextView 
				android:id="@+id/lineup2"
		        android:layout_width="wrap_content"  
		        android:layout_height="fill_parent"  
		        android:text="AAA vs BBB "  
				android:textColor="@android:color/white"
				android:textSize="18sp"
	        />

			<TextView 
			    android:id="@+id/live2"
		        android:layout_width="wrap_content"  
		        android:layout_height="fill_parent"  
		        android:text="Live!"  
				android:textStyle="bold|italic"  
				android:textColor="@color/red"
				android:textSize="18sp"
			
	        />
		</LinearLayout>
		
			<LinearLayout 
	    	android:id="@+id/liveview3"
	        android:orientation="horizontal"  
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content"  
			android:layout_below="@id/liveview2"
			android:layout_alignLeft="@id/liveview2"
			android:layout_marginTop="5dip"
			
			>  
			<TextView 
				android:id="@+id/lineup3"
		        android:layout_width="wrap_content"  
		        android:layout_height="fill_parent"  
		        android:text="AAA vs BBB "  
				android:textColor="@android:color/white"
				android:textSize="18sp"
	        />

			<TextView 
			    android:id="@+id/live3"
		        android:layout_width="wrap_content"  
		        android:layout_height="fill_parent"  
		        android:text="Live!"  
				android:textStyle="bold|italic"  
				android:textColor="@color/red"
				android:textSize="18sp"
			
	        />
		</LinearLayout>
		

</RelativeLayout>